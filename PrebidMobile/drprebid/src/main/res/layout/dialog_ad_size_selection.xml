<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/group_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp">

        <RadioButton
            android:id="@+id/radio_300_250"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ad_size_300_250"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_300_600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/ad_size_300_600"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_320_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/ad_size_320_50"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_320_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/ad_size_320_100"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_320_480"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/ad_size_320_480"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_728_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/ad_size_728_90"
            android:textSize="16sp" />
    </RadioGroup>
</LinearLayout>